/* pages/personDetail/personDetail.wxss */
.topback{
  position: absolute;
  z-index:1;
}

.scrollpage{
  position: absolute;
  z-index:0;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 450rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg .nickname {
  margin-top:-120rpx;
  margin-left:50rpx;
}

.UCenter-bg .avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top:50rpx;
  margin-left: -400rpx;
}
.icon{
	justify-content: center;
	height: 35rpx;
	width: 35rpx;
}
.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}